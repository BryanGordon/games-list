---
import AsideMenu from '../components/AsideMenu.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>

	<body class="bg-[#808590]">
		
		<main id="container">
			
			<aside class="text-white bg-gray-800 rounded-br-lg h-dvh sticky top-0">
				<h1 class=" text-blue-400 flex place-content-center mt-5 font-bold text-2xl">Categorias</h1>
				<AsideMenu />
			</aside>
			
			<section id="home">
				<slot />
			</section>

		</main>

		<footer class="bg-zinc-700 flex place-content-center mt-16 pb-6 pt-7">
			<a class=" text-xl text-white" href="#home">
				Volver al principio
			</a>
		</footer>


			
	</body>

</html>

<style is:global>
	#container {
		display: flex;
		justify-content: center;
	}

	#home {
		width: 100%;
	}

	html {
		font-family: system-ui, sans-serif;
		background: #8443ce;
	}
</style>

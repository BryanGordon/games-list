---
interface Props {
  buttonText: string
  redirect: string
}

const props = Astro.props

const bgColor = 'grey'
---

    <a href={props.redirect} class="added">
      <slot/>
      {props.buttonText}
    </a>

<style>
  a {
    display: flex;
    justify-self: center;
    justify-content: center;
    padding: 15px 45px;
    border-radius: 8px;
    background-color: grey;
    cursor: pointer;
    font-weight: 500;
  }

  .added {
    color: green;
  }
</style>

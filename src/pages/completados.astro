---
import Layout from "../layouts/Layout.astro"
import { useFilter } from "../hooks/useFilter"
import GameCard from "../components/GameCard.astro"

const { toComplete, filterGames } = useFilter()
const games = filterGames(toComplete)
---
<Layout title="Platinar">
  <header class="flex place-content-center mt-10">
		<h1 class="font-medium lg:text-5xl">Completar al 100%</h1>
	</header>

  <article class="w-full grid md:grid-cols-2 gap-4 mt-16 sm:grid-cols-1">
    {
      games.map((game) => <GameCard games={game}/>)
    }
  </article>
  
</Layout>

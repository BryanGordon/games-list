---
import Layout from '../layouts/Layout.astro'

let count = 0

function increment() {
  count++
  console.log(count)
}
---
<Layout title='add games'>
<section>
  <span>{count}</span>
  <button onclick={() => increment()}>Increment</button>
  <h1>Agregar juego</h1>
  <article>
    <form action="http://localhost:3000/games" method="POST">
      <div>
        <label htmlFor="name">Nombre</label>
        <input type="text" name="name" id="name" required />
      </div>
      
      <div>
        <label htmlFor="status">Estado</label>
        <select name="status" id="status">
          <option value="1">Jugando</option>
          <option value="2">Por jugar</option>
          <option value="3">Completado</option>
          <option value="4">Platinar</option>
        </select>
      </div>

      <div>
        <label for="header_image">Imagen</label>
        <input type="text" name="header_image" id="header_image" required />
      </div>

      <button type="submit">Agregar juego</button>
    </form>
  </article>
</section>
</Layout>
